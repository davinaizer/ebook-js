<div class="jumbotron text-center">
    <h1>Bem-vindo de volta!</h1>

    <h3 class="text-center"><i class="fa fa-trophy fa-4x" aria-hidden="true"></i>
        <br><br>Seu progresso</h3>

    <div class="progress">
        {{#each chapterProgress}}
            <div class="progress-bar progress-bar-chapter{{@index}}" style="width: {{global}}%">
                {{#if local}}
                    {{local}}%
                {{/if}}
            </div>
        {{/each}}
    </div>

    <button id="start-btn" class="btn btn-primary" href="#" role="button">Continuar</button>
</div>
